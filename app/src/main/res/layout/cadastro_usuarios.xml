<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_cadastro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09EE28"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_logo_cadastro"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        app:srcCompat="@drawable/baseline_face_black_18dp" />

    <TextView
        android:id="@+id/txt_msg_cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastro de usuÃ¡rio"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#E1FA03" />

    <TextView
        android:id="@+id/txt_nome_cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#E8F00A" />

    <EditText
        android:id="@+id/txt_name_cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nome e sobrenome"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#3949AB" />

    <TextView
        android:id="@+id/txt_telefone_cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Telefone"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFE104" />

    <EditText
        android:id="@+id/txt_phone_cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="(Informe o seu telefone)"
        android:inputType="phone"
        android:textColor="#3949AB" />

    <TextView
        android:id="@+id/txt_email_cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#F3DC05" />

    <EditText
        android:id="@+id/edt_e_mail_cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="(Informe o email)"
        android:inputType="textEmailAddress"
        android:textColor="#3949AB" />

    <Button
        android:id="@+id/btn_cadastrar_cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar" />
</LinearLayout>