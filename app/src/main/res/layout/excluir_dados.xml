<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_excluir"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#536DFE"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_logo_excluir"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        app:srcCompat="@drawable/baseline_android_black_18dp" />

    <TextView
        android:id="@+id/txt_alterar_excluir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Excluir dados"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txt_nome_excluir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/txt_name_excluir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="[Nome]"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/txt_email_excluir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Email"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/edt_email_excluir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/txt_telefone_excluir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Telefone"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/edt_phone_excluir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone" />

    <LinearLayout
        android:id="@+id/layout_setas_excluir"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_capAnterior_excluir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/baseline_fast_rewind_black_18dp" />

        <ImageView
            android:id="@+id/img_voltar_excluir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FDFFFFFF"
            app:srcCompat="@drawable/baseline_skip_previous_black_18dp" />

        <ImageView
            android:id="@+id/img_avancar_excluir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/baseline_skip_next_black_18dp" />

        <ImageView
            android:id="@+id/img_proximoCap_excluir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FAFFFFFF"
            app:srcCompat="@drawable/baseline_fast_forward_black_18dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_excluirDados_excluir"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_excluir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Excluir"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FCFFFFFF" />
    </LinearLayout>

</LinearLayout>